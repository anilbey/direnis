<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ev"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".Ev" >

     <View
         android:id="@+id/viewStub1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/destek_image"
         android:layout_alignLeft="@+id/textView3"
         android:layout_alignTop="@+id/maske_image"
         android:layout_marginRight= "5dp"
         android:background="#50000000" />
    
    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/puan"
        android:layout_alignParentTop="true"
        android:background="@drawable/extension"
        android:layout_centerHorizontal="true" />
    
    <Button
        android:id="@+id/dinlenbtn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/dukkanbtn"
        android:layout_alignBottom="@+id/dukkanbtn"
        android:layout_alignRight="@+id/direnisbtn"
        android:background="@drawable/button"
        android:text="Dİnlen" />
    
    <Button
        android:id="@+id/dukkanbtn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/direnisbtn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:background="@drawable/button"
        android:text="Dükkan" />

    <Button
        android:id="@+id/direnisbtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/dinlenbtn"
        android:layout_alignLeft="@+id/ev_textView1"
        android:layout_alignRight="@+id/puan"
        android:layout_marginBottom="2dp"
        android:background="@drawable/button"
        android:text="Dİrenİşe Gİt" />


    
    
     <TextView
        android:id="@+id/time"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFF"
        android:text="DigitalClock"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:textSize="20sp" />
    
    <TextView
        android:id="@+id/puan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ev_textView2"
        android:layout_alignBottom="@+id/ev_textView2"
        android:layout_alignRight="@+id/time"
        android:layout_toRightOf="@+id/ev_textView2"
        android:text="200 "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="right"
        android:background="#242424"
        android:layout_marginLeft="5dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/ev_direnisci_adi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/time"
        android:layout_toLeftOf="@+id/time"
        android:text="Direnişçi Adı"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ev_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ev_direnisci_adi"
        android:text="Seviye "
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    

    <TextView
        android:id="@+id/ev_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/time"
        android:layout_below="@+id/ev_direnisci_adi"
        android:text="Puan"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/seviye"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ev_textView1"
        android:layout_alignBottom="@+id/ev_textView1"
        android:layout_toRightOf="@+id/ev_textView1"
        android:text="0 "
        android:background="#242424"
        android:gravity="right"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ev_textView1"
        android:layout_below="@+id/ev_textView1"
        android:layout_marginTop="22dp"
        android:textColor="#FFFFFF"
        android:layout_toLeftOf="@+id/destek_image"
        android:text="      Maske:" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:text="      Eldiven:" android:layout_alignRight="@+id/eldiven_image"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/eldiven_image"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="22dp"
        android:text="      Destek: \n"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/maske_adi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dinlenbtn"
        android:layout_alignRight="@+id/puan"
        android:layout_alignTop="@+id/textView3"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="Yok" />

    <TextView
        android:id="@+id/eldiven_adi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/maske_adi"
        android:layout_alignRight="@+id/maske_adi"
        android:layout_alignTop="@+id/eldiven_image"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="Yok" />

    <TextView
        android:id="@+id/destek_adi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eldiven_adi"
        android:layout_alignRight="@+id/eldiven_adi"
        android:layout_alignTop="@+id/destek_image"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="Yok" />

    <ImageView
        android:id="@+id/destek_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignTop="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:src="@drawable/kaskol" />
    
    <ImageView
        android:id="@+id/eldiven_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/destek_image"
        android:layout_alignRight="@+id/destek_image"
        android:src="@drawable/bahcivaneldiveni" />

    <ImageView
        android:id="@+id/maske_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eldiven_image"
        android:layout_alignRight="@+id/eldiven_image"
        android:layout_alignTop="@+id/textView3"
        android:src="@drawable/antikagazmaskesi" />

    
    
</RelativeLayout>