<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sehirsec"
    tools:context=".SehirSec" >

    <Button
        android:id="@+id/istanbul_btn"
        android:layout_width="100dp"
        
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/sehirsec_textView1"
        android:background="@drawable/button"
        android:layout_below="@+id/sehirsec_textView1"
        android:layout_marginTop="34dp"
        android:text="İSTANBUL" />

    <TextView
        android:id="@+id/sehirsec_textView1"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="ŞEHİR SEÇ"
        android:textSize="35dp" />

    <Button
        android:id="@+id/ankara_btn"
        android:layout_width="100dp"
        
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/istanbul_btn"
        android:layout_alignBottom="@+id/istanbul_btn"
        android:layout_alignRight="@+id/sehirsec_textView1"
        android:background="@drawable/button"
        android:text="ANKARA  " />

</RelativeLayout>